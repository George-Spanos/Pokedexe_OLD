@inherits MessageBubbleBase;
<div class="grid grid-cols-6 lg:grid-cols-13 gap-1">
    <img class="rounded-full border-2 border-blue-400 p-1 col-span-1" width="50" src="@User.PictureUrl" alt="@User.Name"/>

    <div class="flex flex-col gap-3 flex-grow">
        @foreach (var message in Messages){
            <span >@((string)message)</span>
        }
    </div>

    <span class="text-xs text-gray-400 col-start-2 col-span-full text-right">@Messages.Last().Timestamp</span>
    <span class="text-sm text-gray-400 col-span-1">@User.Firstname</span>

</div>