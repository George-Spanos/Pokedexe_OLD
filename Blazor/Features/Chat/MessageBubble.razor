@using PokedexChat.Extensions
@inherits MessageBubbleBase;
<div class="grid grid-cols-6 lg:grid-cols-13 gap-1">
    <div class="flex flex-col gap-y-2">
        <span class="text-sm text-gray-400 col-span-1 row-span-1">@User.Name</span>
        <img class="rounded-full border-2 border-blue-400 p-1 col-start-1 row-start-2 row-span-1 col-span-1" width="50" height="50" src="@User.PictureUrl" alt="@User.Name"/>
    </div>
    <div class="flex flex-col col-start-2 col-span-full row-span-full gap-3 flex-grow">
        @foreach (var message in Messages){
            <span class="message">@(message.Text)</span>
            <span class="text-xs text-gray-400 col-start-2 col-span-full text-right">@message.Timestamp.MessageFormat()</span>
        }
    </div>


</div>